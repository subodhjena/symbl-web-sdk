{
  "compilerOptions": {
    "outDir": "build-tsc",
    "lib": [ "dom", "esnext" ],
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
      // Rest of ts config options...
      "plugins": [
          {
              "transform": "typescript-is/lib/transform-inline/transformer"
          }
      ]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}