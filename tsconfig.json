{
  "compilerOptions": {
    "outDir": "build",
    "lib": [ "dom", "esnext" ],
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
